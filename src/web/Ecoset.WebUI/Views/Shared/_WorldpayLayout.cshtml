@{
    var absUrlPrefix = "yourWebAddressHere";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @siteConfig.Value.InstanceName</title>
    <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="@absUrlPrefix/css/site.min.css" asp-append-version="true" />
    <link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
    @RenderSection("headInclude", required: false)
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top" style="padding:0.75em;">
        <div class="container">
            <div class="navbar-header">
                <img class="logo-black" src="@absUrlPrefix/images/logo-black.png" alt="@siteConfig.Value.InstanceName" style="height:60%;"/>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
