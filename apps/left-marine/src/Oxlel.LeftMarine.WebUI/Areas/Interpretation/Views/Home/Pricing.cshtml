@using Ecoset.WebUI
@using Ecoset.WebUI.Options
@using Microsoft.Extensions.Options
@inject IOptions<EcosetAppOptions> siteConfig
@{
    ViewData["Title"] = "Pricing";
}

<div style="text-align:center;">
<br/>
<h2>Marine LEFT is free of charge</h2>

<div class="row">
    <div class="col-md-3 col-md-push-3">
        <div class="panel panel-primary pricing-panel" style="border-color: lightgrey;">
            <div class="panel-heading" style="background-color: lightgrey;border-color:lightgray;color:black;height:6em;">
                <h3 class="panel-title"><h3>Free</h3></h3>
            </div>
            <div class="panel-body">
                <p>Analyse a seascape up to ten decimal degrees squared. Each analysis includes:</p>    
                <ul>
                    <li style="line-height: 2em;">One Marine LEFT Report</li><li style="line-height: 2em;">Download of Underlying Data</li>
                    <li style="line-height: 2em;">API for custom data packages</li>
